<%= error_messages_for 'employee' %>

<!--[form:employee]-->
<table>
<tr>
	<td><label for="employee_first_name">First name</label></td>
	<td><%= text_field 'employee', 'first_name'  %></td>
</tr>
<tr>
	<td><label for="employee_last_name">Last name</label></td>
	<td><%= text_field 'employee', 'last_name'  %></td>
</tr>
<tr>
	<td><label for="employee_email">Email</label></td>
	<td><%= text_field 'employee', 'email'  %></td>
</tr>
<tr>
	<td><label for="employee_phone_number">Phone number</label><t/d>
	<td><%= text_field 'employee', 'phone_number'  %></td>
</tr>
<tr>
	<td><label for="employee_hire_date">Hire date</label></td>
	<td><%= date_select 'employee', 'hire_date'  %></td>
</tr>
<tr>
	<td><label for="employee_manager">Manager</label></td>
	<td><%= collection_select("employee", "manager_id" , @managers, "id", "last_name") %></td>
<tr>
	<td><label for="employee_job">Job</label></td>
	<td><%= collection_select("employee", "job_id" , @jobs, "id", "job_title") %></td>
</td>
<tr>
	<td><label for="employee_department">Department</label></td>
	<td><%= collection_select("employee", "department_id" , @departments, "id", "name") %></td>
</tr>
<tr>
	<td><label for="employee_salary">Salary</label></td>
	<td><input id="employee_salary" name="employee[salary]" size="30" type="text" value="<%= number_with_precision(@employee.salary||0, :precision=>0) %>" /></td>
</tr>
<tr>
	<td><label for="employee_commission_percent">Commission pct</label></td>
	<td><%= text_field 'employee', 'commission'  %></td>
</tr>
</table>
<!--[eoform:employee]-->

